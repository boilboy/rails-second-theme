<h1>Rooms#index</h1>
<p>Find me in app/views/rooms/index.html.erb</p>

<h3>施設登録済み一覧</h3>
<table>
 <thead>
  <tr>
   <th>施設画像</th>
   <th>施設名</th>
   <th>紹介文</th> 
   <th>料金</th>
   <th>作成日</th>
   <th></th>
  </tr>
 </thead>

 <tbody>
  <% @rooms.each do |room| %>
   <tr>
    <td>
     #<% if user_signed_in? %>
      <%= link_to image_tag room.image.url, size: '275x190' %>
     #<% else %>
      #<%= link_to image_tag ('/uploads/room/image/room_default.png'), size: '275x190' %>
     #<% end %>
    </td> 
    <td><%= room.name %></td>
    <td><%= room.introduction %></td>
    <td><%= room.price %></td>
    <td><%= room.created_at.to_s(:datetime_jp) %></td>
    <td>
     <%= link_to "施設を削除する",rooms_path, method: :delete, data: { confirm: "本当に削除しますか？" }%>
    </td>
   </tr>
  <% end %>
 </tbody>
</table>
