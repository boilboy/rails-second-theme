<div class ="room-registrations-summary">
 <h3>新規登録</h3>
 <%= render partial: "users/shared/error_messages", locals: { resource: @room } %>
  
 <%= form_with model: @room, url: rooms_path, local: true do |f| %>

 <table>
  <tr>
   <th><%= f.label :room_name, "施設名" %></th>
   <td><%= f.text_field :room_name %></td>
  </tr>

  <tr>
   <th><%= f.label :room_introduction, "施設詳細" %></th>
   <td><%= f.text_area :room_introduction %></td>
  </tr>

  <tr>
   <th><%= f.label :price, "料金" %></th>
   <td><%= f.text_field :price, :placeholder => "1日あたりの料金を入力" %></td>
  </tr>

  <tr>
   <th><%= f.label :address, "住所" %></th>
   <td><%= f.text_field :address %></td>
  </tr>

  <tr>
   <th><%= f.label :image, "施設画像" %></th>
   <td><%= f.file_field :image %></td>
  </tr>

 </table>

  <%= f.submit "登録完了する"%>

 <% end %>

  <button>
   <%= link_to "キャンセル", 'javascript:history.back()' %>
  </button>

</div>
