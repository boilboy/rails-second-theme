<div class ="room-registrations-summary">

 <h3>施設情報の編集</h3>
 <%= render "users/shared/error_messages", resource: @room  %>
 <%= form_with model: @room do |f| %>

 <table>
  <tr>
   <th><%= f.label :name, "施設名" %></th>
   <td><%= f.text_field :name %></td>
  </tr>

  <tr>
   <th><%= f.label :introduction, "施設詳細" %></th>
   <td><%= f.text_area :introduction %></td>
  </tr>

  <tr>
   <th><%= f.label :price, "料金" %></th>
   <td><%= f.text_field :price, :placeholder => "1日あたりの料金を入力" %></td>
  </tr>

  <tr>
   <th><%= f.label :address, "住所" %></th>
   <td><%= f.text_field :address %></td>
  </tr>

  <tr>
   <th><%= f.label :image, "施設画像" %></th>
   <td><%= f.file_field :image %></td>
  </tr>

 </table>

  <%= f.submit "変更完了する"%>

 <% end %>

  <button>
   <%= link_to "キャンセル", 'javascript:history.back()' %>
  </button>

</div>
